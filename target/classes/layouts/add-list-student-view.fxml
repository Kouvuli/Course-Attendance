<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>

<BorderPane xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" stylesheets="@../styles/style.css">
   <center>
      <TableView fx:id="tableView">
        <columns>
          <TableColumn fx:id="checkBoxCol" prefWidth="75.0" />
          <TableColumn fx:id="studentIdCol" prefWidth="75.0" text="ID" />
            <TableColumn fx:id="studentNameCol" prefWidth="200.0" text="Name" />
        </columns>
      </TableView>
   </center>
   <bottom>
      <HBox spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Region HBox.hgrow="ALWAYS" />
            <Button mnemonicParsing="false" onAction="#applyHandler" text="OK" />
            <Button mnemonicParsing="false" onAction="#cancelHandler" text="Há»§y" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </bottom>
</BorderPane>
