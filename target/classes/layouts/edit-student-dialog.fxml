<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1">
    <center>
        <VBox>
            <children>
                <HBox layoutX="10.0" layoutY="10.0" spacing="65.0">
                    <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Tên">
                            <HBox.margin>
                                <Insets top="2.0" />
                            </HBox.margin>
                        </Text>
                        <TextField fx:id="studentNameTxt" />
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </HBox>
                <HBox spacing="48.0">
                    <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="CMND">
                            <HBox.margin>
                                <Insets top="2.0" />
                            </HBox.margin>
                        </Text>
                        <TextField fx:id="studentCMNDTxt" />
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </HBox>
                <HBox layoutX="10.0" layoutY="10.0" spacing="31.0">
                    <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Ngày sinh">
                            <HBox.margin>
                                <Insets top="2.0" />
                            </HBox.margin>
                        </Text>
                        <DatePicker fx:id="studentBirthday" prefHeight="26.0" prefWidth="149.0" />
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </HBox>
                <HBox layoutX="10.0" layoutY="10.0" spacing="50.0">
                    <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Phone">
                            <HBox.margin>
                                <Insets top="2.0" />
                            </HBox.margin>
                        </Text>
                        <TextField fx:id="phoneNumberTxt">
                            <HBox.margin>
                                <Insets />
                            </HBox.margin>
                        </TextField>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </HBox>
                <HBox layoutX="10.0" layoutY="10.0" spacing="56.0">
                    <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Email">
                            <HBox.margin>
                                <Insets top="2.0" />
                            </HBox.margin>
                        </Text>
                        <TextField fx:id="emailTxt">
                            <HBox.margin>
                                <Insets />
                            </HBox.margin>
                        </TextField>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </HBox>
            </children>
        </VBox>
    </center>
    <bottom>
        <HBox spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <Region HBox.hgrow="ALWAYS" />
                <Button mnemonicParsing="false" onAction="#confirmHandler" text="Confirm" />
                <Button mnemonicParsing="false" onAction="#cancelHandler" text="Cancel" />
            </children>
            <padding>
                <Insets bottom="10.0" right="10.0" top="10.0" />
            </padding>
        </HBox>
    </bottom>
</BorderPane>
